<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/medical_history_timePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.5dip"
        android:background="@drawable/time_line_point" />

    <TextView
        android:id="@+id/medical_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_toRightOf="@id/medical_history_timePoint"
        android:background="@drawable/u_member_info_time_bg"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/medical_history_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/medical_history_time"
        android:layout_below="@id/medical_history_time"
        android:layout_marginTop="3dip"
        android:layout_marginRight="6dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/medical_history_attachment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/medical_history_comment"
        android:layout_below="@id/medical_history_comment"
        android:layout_marginTop="3dip"
        android:src="@drawable/album_nophoto" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignLeft="@id/medical_history_time"
        android:layout_below="@id/medical_history_attachment"
        android:background="@color/white" />

</RelativeLayout>