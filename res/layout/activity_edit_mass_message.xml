<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/top_bar_doctor_green" />
    
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="消息将分别发送给以下患者"
        android:textColor="@color/text_color_gray"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "10dp"
        android:background="@color/reseda"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收人："
            android:textSize="15sp"
            />
        
        <TextView
            android:id="@+id/tv_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三，李四，王老五，张三，李四，王老五，张三，李四，王老五，张三，李四，王老五，"
            android:textColor="@color/topbg_green"
            android:gravity="left|top"
            android:maxLines="2"
            android:textSize="16sp"
            />
        
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray"
        />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:gravity="left|top"
        android:hint="请输入消息内容"
        android:background="@null"
        android:textSize="16sp"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        />
</LinearLayout>
