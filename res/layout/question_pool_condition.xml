<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:padding="1dp"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    android:padding="10dp">
	    <net.ememed.doctor2.widget.CircleImageView
	        android:id="@+id/question_pool_condition_img_head"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:background="@drawable/avatar_large"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="3"
	        >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="20dp"
			    android:orientation="horizontal"
			    >
			    <TextView 
			        android:id="@+id/question_pool_condition_txt_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="的马斯"
			        />
			    <TextView 
			        android:id="@+id/question_pool_condition_txt_sex"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:text="女"
			        />
			    <TextView 
			        android:id="@+id/question_pool_condition_txt_age"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="99岁"
			        />
			</LinearLayout>
			<TextView 
			    android:id="@+id/question_pool_condition_txt_date"
			    android:layout_width="wrap_content"
			    android:layout_height="20dp"
			    android:gravity="center"
			    android:text="1分钟前"
			    />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    >
		    <TextView
		        android:id="@+id/question_pool_condition_ishuifu"
		        android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:text="待回复"
		        />
		    <ImageView 
		        android:layout_width="15dp"
		        android:layout_height="15dp"
		        android:background="@drawable/arrow_icon"
		        />
		</LinearLayout>
	</LinearLayout>
	
	<include android:id="@+id/question_pool_people" layout="@layout/question_pool"/>
	
	<include android:id="@+id/question_pool_appraise_add" 
	    layout="@layout/question_pool_appraise"/>
	
</LinearLayout>
