<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/list_item_bg"
    android:layout_margin="10dp"
    android:padding="1dp"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    android:padding="10dp">
	    <FrameLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
		    <net.ememed.doctor2.widget.CircleImageView
		        android:id="@+id/question_pool_info_img_head"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:background="@drawable/avatar_small"
		        />
		    <ImageView
		        android:id="@+id/questionimg_head"
		        android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:background="@drawable/avatar_small"
		        android:layout_gravity="right"
		        android:visibility="gone"
		        />
	    </FrameLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1"
	        >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="20dp"
			    android:orientation="horizontal"
			    >
			    <TextView 
			        android:id="@+id/question_pool_info_txt_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="的马斯"
			        />
			    <TextView 
			        android:id="@+id/question_pool_info_txt_sex"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:text="女"
			        />
			    <TextView 
			        android:id="@+id/question_pool_info_txt_age"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="99岁"
			        />
			</LinearLayout>
			<TextView 
			    android:id="@+id/question_pool_info_txt_date"
			    android:layout_width="wrap_content"
			    android:layout_height="20dp"
			    android:gravity="center"
			    android:text="1分钟前"
			    />
		</LinearLayout>
		<Button 
		    android:id="@+id/receive_bnt"
		    android:layout_width="90dp"
		    android:layout_height="35dp"
		    android:text="认领"
		    android:textColor="@color/white"
		    android:background="@drawable/question_pool_btn_claim"
		    />
	</LinearLayout>
	
	<include android:id="@+id/question_pool_people" layout="@layout/question_pool"/>
	
</LinearLayout>
