<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_title_height"
        android:background="@color/prime_green"
        android:checkedButton="@+id/rb_friend"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp" >

        <RadioButton
            android:id="@+id/rb_friend"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_communication_tab_bg_left"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="医生好友"
            android:textColor="@drawable/selector_communication_tab_text"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_group"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_communication_tab_bg_right"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="我的群组"
            android:textColor="@drawable/selector_communication_tab_text"
            android:textSize="14sp" />
    </RadioGroup>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>