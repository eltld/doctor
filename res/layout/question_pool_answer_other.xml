<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/list_item_bg"
    android:padding="1dp">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    android:padding="10dp">
	    <net.ememed.doctor2.widget.CircleImageView
	        android:id="@+id/question_pool_other_img_head"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:background="@drawable/avatar_large"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="3"
	        >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal"
			    >
			    <TextView 
			        android:id="@+id/question_pool_other_txt_name"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:text="的马斯"
			        android:textSize="15sp"
			        />
			    <TextView 
			        android:id="@+id/question_pool_other_txt_sex"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:text="女"
			        android:textSize="15sp"
			        />
			    <TextView 
			        android:id="@+id/question_pool_other_txt_age"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="99岁"
			        android:textSize="15sp"
			        />
			</LinearLayout>
			<TextView 
			    android:gravity="bottom"
			    android:id="@+id/question_pool_other_txt_date"
			    android:layout_width="match_parent"
			    android:layout_height="20dp"
			    android:text="1分钟前"
			    android:textColor="#a0a0a0"
			    />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginRight="5dp"
		    >
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:gravity="center_horizontal"
			    >
				<ImageView 
				    android:id="@+id/question_pool_other_img_zan"
				    android:layout_width="19dp"
				    android:layout_height="19dp"
				    android:background="@drawable/question_pool_sxy_gray"
				    />
				<TextView 
				    android:id="@+id/question_pool_other_txt_number_zan"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="99"
				    android:layout_marginTop="4dp"
				    android:textColor="#707070"
				    android:textSize="15sp"
				    />
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginLeft="10dp"
			    android:gravity="center_horizontal"
			    >
				<ImageView 
				    android:layout_width="19dp"
				    android:layout_height="19dp"
				    android:background="@drawable/pinlun_gary"
				    />
				<TextView 
				    android:id="@+id/question_pool_other_txt_number_punlun"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="99"
				    android:layout_marginTop="4dp"
				    android:textColor="#707070"
				    android:textSize="15sp"
				    />
			</LinearLayout>
		</LinearLayout>
		
	</LinearLayout>
	
	<include android:id="@+id/question_pool_people" layout="@layout/question_pool"/>
</LinearLayout>
