<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >
    
    <RelativeLayout
        android:id="@+id/contact_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:gravity="center" >

        <net.ememed.doctor2.widget.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_person"
            android:layout_width="43.5dp"
            android:layout_height="43.5dp"
            android:src="@drawable/avatar_medium"
            app:border_color="@color/gray"
            app:border_width="2dp" />
        <ImageView 
            android:id="@+id/unreadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contact_red"
            android:visibility="gone"
            android:layout_marginLeft="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/contact_image"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="张三"
            android:singleLine="true"
            android:textSize="16sp" />
        
        
        
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="￥58"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="#ac1a29"
             />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="2014-11-11"
            android:textColor="#666666" />
        
        <TextView 
            android:id="@+id/tv_service_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="服务结束"
            android:textColor="#ac1a29"
            android:textSize="16sp"
            />
    </RelativeLayout>
    
    <View
        android:id="@+id/ll_cut_line" 
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/contact_image"
        android:background="@drawable/chat_cut_line">
    </View>
    
    <TextView 
        android:id="@+id/textView_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_cut_line"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#4d4d4d"
        android:text="[吃多了怎么办?吃多了怎么办?吃多了怎么办?吃多了怎么办?吃多了怎么办?吃多了怎么办??吃多了怎么办?吃多了怎么?吃多了怎么办?吃多了怎么?吃多了怎么办?吃多了怎么?吃多了怎么办?吃多了怎么]"
        />
</RelativeLayout>
</RelativeLayout>