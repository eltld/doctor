<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/list_item_default"
    android:padding="10dp" >
    <RelativeLayout 
        android:layout_width="50dp"
        android:layout_height="50dp"
        >
        <net.ememed.doctor2.widget.CircleImageView 
            android:id="@+id/patient_group_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/avatar_large"
            />
        <net.ememed.doctor2.widget.CircleImageView
            android:id="@+id/patient_group_avatar_roddot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/reddot"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        >
        <TextView 
	        android:id="@+id/patient_group_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="你们们"
		    android:textSize="15sp"
	    />
        <TextView 
            android:id="@+id/patient_group_content"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="1dp"
		    android:text="你们们你们你们"
		    android:textColor="#888888"
		    android:maxLines="1"
		    android:ellipsize="end"
	    />
    </LinearLayout>
	
</LinearLayout>
