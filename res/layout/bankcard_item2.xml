<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants"
    >
    
    <!-- 
          根布局的这一句是为了防止因为子控件抢焦点而导致的item无法获取点击事件
    android:descendantFocusability="blocksDescendants" -->
    
		<LinearLayout
        android:id="@+id/ll_bank_id"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login2_et_bg"
        
        android:orientation="horizontal" >
		<ImageView
		    android:id="@+id/iv_pic"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="5dp"
		    android:background="@drawable/finace_yinlian" />
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical"
		    android:orientation="vertical"
		    android:layout_marginLeft="5dp" >
		    <TextView
		        android:id="@+id/tv_bank"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="中国工商银行"
		        android:textSize="13sp"
		        android:textColor="#000000" />
		    <TextView
		        android:id="@+id/tv_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=""
		        android:textSize="13sp"
		        android:textColor="#a5a5a5"/>
		</LinearLayout>
		 <LinearLayout
	        android:layout_width="fill_parent"     
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical|right" 
	        android:layout_marginRight="10dp"
	        android:gravity="right"
	        android:orientation="horizontal" >
			<ImageButton
			    android:id="@+id/btn_bank"
			    android:layout_width="15dp"
			    android:layout_height="15dp"  
           		android:background="@drawable/finace_circle" />
		</LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>