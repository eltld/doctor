<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/listDivider"
    android:orientation="vertical">
	<include layout = "@layout/top_bar_baike" />
   <include layout = "@layout/activity_my_baike" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        >
    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/iv_money"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baike_money" />

        <TextView
            android:id="@+id/tv_item_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_money"
            android:layout_weight="1"
            android:text="我的赏金"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="￥168" />
        
        <ImageView
             android:layout_width="13dp"
             android:layout_height="13dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/u_right_arrow_gray" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_visitor"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="16dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baike_visitor" />

        <RelativeLayout 
            android:layout_width="70dp"
            android:layout_height="30dp"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:text="我的访客"
            android:textSize="15sp" />
            
            <TextView
                android:id="@+id/tv_red_point_visitor"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="20"
                android:background="@drawable/red_point"
                />
            </RelativeLayout>
        

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#888888"
            android:text="38  人" />
        
         <ImageView
             android:layout_width="13dp"
             android:layout_height="13dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/u_right_arrow_gray" />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="praise"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="16dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baike_praise" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_money"
            android:layout_weight="1"
            android:text="我赞过的"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:text="26  个" />
        
         <ImageView
             android:layout_width="13dp"
             android:layout_height="13dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/u_right_arrow_gray" />
    </LinearLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="comment"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="16dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baike_comment" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_money"
            android:layout_weight="1"
            android:text="我评论的"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:text="41  条" />
        
         <ImageView
             android:layout_width="13dp"
             android:layout_height="13dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/u_right_arrow_gray" />
    </LinearLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#f1f1f1"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="share"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="16dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baike_share" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_money"
            android:layout_weight="1"
            android:text="我分享的"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:text="19  次" />
        
         <ImageView
             android:layout_width="13dp"
             android:layout_height="13dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/u_right_arrow_gray" />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/reseda"
        />
    </LinearLayout>
</LinearLayout>