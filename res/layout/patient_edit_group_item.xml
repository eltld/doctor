<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       	android:layout_marginTop="13dp"
       	android:background="@drawable/list_item_default"
    android:orientation="horizontal" >
    <LinearLayout 
       	android:layout_width="match_parent"
       	android:layout_height="46dp"
       	android:orientation="horizontal"
       	
       	android:layout_weight="1"
        >
        <Button 
            android:id="@+id/patient_edit_chooes"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/wgx_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
		<ImageView 
            android:id="@+id/patient_edit_chooes_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/wgx_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/patient_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:text="添加新分组"
            android:textSize="15sp" />

        <Button 
            android:id="@+id/patient_edit_delete"
		    android:layout_width="80dp"
		    android:layout_height="match_parent"
		    android:text="删除"
		    android:background="@color/red_orange"
		    android:textColor="@color/white"
		    android:visibility="gone"
	    />
    </LinearLayout>
	
</LinearLayout>
