<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/reseda"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_income_expend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_default"
        android:onClick="doClick"
        android:clickable="true" >

        <FrameLayout
            android:id="@+id/contact_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/home_notice_pink" >

            <ImageView
                android:id="@+id/image_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_notice_take_cash" />
        </FrameLayout>

            <TextView
                android:id="@+id/notice_title_take_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/income_expend"
                android:textColor="@color/black"
                android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_doctor_income"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_default"
        android:clickable="true" >

        <FrameLayout
            android:id="@+id/contact_image1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/home_notice_pink" >

            <ImageView
                android:id="@+id/image_person1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_notice_take_cash" />
        </FrameLayout>


            <TextView
                android:id="@+id/notice_title_take_cash1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/doctor_income"
                android:textColor="@color/black"
                android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray" />
    
     <LinearLayout
        android:id="@+id/ll_doctor_expend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_default"
        android:clickable="true" >

        <FrameLayout
            android:id="@+id/contact_image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/home_notice_pink" >

            <ImageView
                android:id="@+id/image_person2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_notice_take_cash" />
        </FrameLayout>


            <TextView
                android:id="@+id/notice_title_take_cash2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/doctor_expend"
                android:textColor="@color/black"
                android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray" />
    
    <LinearLayout
        android:id="@+id/ll_doctor_freeze"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_default"
        android:clickable="true" >

        <FrameLayout
            android:id="@+id/contact_image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/home_notice_pink" >

            <ImageView
                android:id="@+id/image_person3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_notice_take_cash" />
        </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/doctor_freeze"
                android:textColor="@color/black"
                android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray" />
</LinearLayout>