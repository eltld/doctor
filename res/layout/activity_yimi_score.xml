<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <!-- <include layout="@layout/top_bar_doctor_green" /> -->

    <net.ememed.doctor2.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp" >

                <TextView
                    style="@style/public_text_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="薏米花： " />

                <TextView
                    android:id="@+id/yimi_score_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="#F3A20D"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_yimi_score_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_score_exchange"
                    android:gravity="center"
                    android:text="去兑换"
                    android:textColor="@drawable/txt_score_exchange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" >

                <TextView
                    style="@style/public_text_second_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今日任务：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/public_text_second_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签到" />

                        <TextView
                            android:id="@+id/txt_sign_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="#808080"
                            android:text=""
                            android:textSize="11sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_yimi_score_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_score_exchange"
                        android:text="签到"
                        android:textColor="@drawable/txt_score_exchange" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/public_text_second_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享今日说说" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="分享今天发表的说说，最高可获200薏米花"
                            android:textColor="#808080"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_yimi_score_share"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_score_exchange"
                        android:text="分享"
                        android:textColor="@drawable/txt_score_exchange" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/public_text_second_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请患者" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="邀请患者注册并登陆薏米医生，可获200薏米花"
                            android:textColor="#808080"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_invite_patient"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_score_exchange"
                        android:text="邀请"
                        android:textColor="@drawable/txt_score_exchange" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/public_text_second_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请同行" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="邀请同行注册并通过认证，双方都可获得1000薏米花"
                            android:textColor="#808080"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_invite_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_score_exchange"
                        android:text="邀请"
                        android:textColor="@drawable/txt_score_exchange" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yimi_score_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_default"
                android:orientation="horizontal" >

                <TextView
                    style="@style/public_text_second_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="查询明细" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yimi_score_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_default"
                android:orientation="horizontal" >

                <TextView
                    style="@style/public_text_second_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="如何赚取更多薏米花" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_icon" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>