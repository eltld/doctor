   <RelativeLayout
       android:id="@+id/rl_order_message"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:clickable="true"
       android:onClick="doClick"
       android:layout_marginTop="5dp"
       android:background="@color/white">
       
       <LinearLayout
           android:id="@+id/ll_pic_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginBottom="15dp"
           android:src="@drawable/pic_message_order"
           />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/ll_pic_1"
           android:layout_alignTop="@+id/ll_pic_1"
           android:layout_alignBottom="@+id/ll_pic_1"
           android:paddingRight="5dp"
           android:orientation="vertical"
           
           >
           <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               >
               <TextView
                   android:id="@+id/title_order_message"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingTop="4dp"
                   android:paddingRight="1dp"
                   android:text="订单服务短信"
                   android:textSize="16sp"/>
               
               <TextView
                   android:id="@+id/tv_time_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBottom="@+id/title_order_message"
                   android:layout_alignParentRight="true"
                   android:text=""
                   android:textSize="12sp"
                   android:layout_marginLeft="5dp"
                   android:textColor="@color/text_color_gray"/>
