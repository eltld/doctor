<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reseda"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/cv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/home_main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" >

            <!-- 头像部分一整条 -->

            <LinearLayout
                android:id="@+id/ll_doctor_photo_bar"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@drawable/bg_top_bar"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <!-- 包裹头像和已认证标签 -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <!-- 包裹头像 -->

                    <LinearLayout
                        android:id="@+id/ll_doctor_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp" >

                        <net.ememed.doctor2.widget.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/civ_doctor_photo"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/default_avatar"
                            app:border_color="@color/white"
                            app:border_width="2dp" />
                    </LinearLayout>

                    <!-- 包裹已认证标签图片 -->

                    <LinearLayout
                        android:id="@+id/ll_audit_lab"
                        android:layout_width="55.5dp"
                        android:layout_height="18.5dp"
                        android:layout_alignRight="@+id/ll_doctor_photo"
                        android:layout_alignTop="@+id/ll_doctor_photo"
                        android:background="@drawable/lab_open_attestation"
                        android:gravity="center"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/tv_audit_lab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="开启认证"
                            android:textColor="@color/white"
                            android:textSize="11dp" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 名字、医院、职称 -->

                <RelativeLayout
                    android:id="@+id/rl_doctor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center" >

                    <!-- 医生名称和职称 -->

                    <LinearLayout
                        android:id="@+id/ll_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓 名"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_cut_line"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:background="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_doctor_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="职位"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_doctor_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_doctor_name"
                        android:text="就职医院"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/tv_doctor_hospital"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/tv_baike"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_circle_rectangle_yellow"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="个人百科"
                            android:textColor="#0000ff" />

                        <ImageView
                            android:id="@+id/iv_red_point_baike"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/red_point"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- 表格 -->

            <LinearLayout
                android:id="@+id/ll_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <!-- 第一行 -->

                <LinearLayout
                    android:id="@+id/ll_switch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <!-- 图文咨询 -->

                    <FrameLayout
                        android:id="@+id/fl_consult_picture"
                        android:layout_width="0dp"
                        android:layout_height="108dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:id="@+id/ll_consult_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_main_fragment_element"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp" >

                                <LinearLayout
                                    android:id="@+id/ll_icon_1"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:gravity="center" >

                                    <ImageView
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/icon_consult_picture" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_red_dot_1"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:layout_alignRight="@+id/ll_icon_1"
                                    android:layout_alignTop="@+id/ll_icon_1"
                                    android:background="@drawable/lab_red_dot"
                                    android:gravity="center"
                                    android:visibility="gone" >

                                    <TextView
                                        android:id="@+id/tv_red_dot_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:text="图文咨询"
                                android:textColor="#333333"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/flag_1"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/lab_not_open" />

                        <!-- end of 图文咨询 -->
                    </FrameLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#c0c0c0" />

                    <!-- 电话咨询 -->

                    <FrameLayout
