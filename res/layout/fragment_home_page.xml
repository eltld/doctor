                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:gravity="center" >

                                    <ImageView
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/icon_private_doctor_2" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_red_dot_3"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:layout_alignRight="@+id/ll_icon_3"
                                    android:layout_alignTop="@+id/ll_icon_3"
                                    android:background="@drawable/lab_red_dot"
                                    android:gravity="center"
                                    android:visibility="gone" >

                                    <TextView
                                        android:id="@+id/tv_red_dot_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:text="私人医生服务"
                                android:textColor="#333333"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/flag_3"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/lab_not_open" />

                        <!-- end of 私人医生 -->
                    </FrameLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#c0c0c0" />

                    <!-- 上门会诊 -->


