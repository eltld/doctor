<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ll_card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="您的患者邀请方式"
                android:textColor="#54b66c"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/reseda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="方法一：请患者扫一扫二维码"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_doctor_card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="陈杏桥医生"
                android:textColor="#333333"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_doctor_professional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医师"
                    android:textColor="#2b8fe5"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/tv_doctor_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小儿内科赛多利斯烦死了"
                    android:textColor="#47a233"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_doctor_hosp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="广州医院"
                android:textColor="#4d4d4d"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/reseda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="方法二：分享邀请链接给患者"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_share_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_qq_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="QQ好友"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_wechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_wechat_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="微信好友"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_contact_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="手机联系人"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- 第二排 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_share_qq_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_qzone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="QQ空间"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_weixin_friends" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="朋友圈"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_sina_weibo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="doClick"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_sina_weibo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="新浪微博"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/reseda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="方法三：让患者在注册时输入您的专属邀请码"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_invite_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_invite_code_bg"
                android:text="邀请码" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>