<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:orientation="vertical" >
    <include layout="@layout/top_bar_doctor_green" />
    <LinearLayout 
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
        >
	    
		<LinearLayout 
		    android:id="@+id/ll_remark_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@color/white"
		    android:padding="10dp"
		    android:layout_marginTop="10dp"
		    >
		    <EditText 
		        android:id="@+id/remark_info_set_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        />
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/ll_describe"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@drawable/ll_describe_edit"
		    android:padding="10dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="10dp"
		    android:minHeight="150dp"
		    >
		    <EditText 
		        android:id="@+id/remark_info_set_describe"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:minLines="6"
		        android:background="@null"
		        android:gravity="top"
		        android:textColor="#404040"
		        />
		</LinearLayout>
	</LinearLayout>
	<include layout="@layout/u_net_unavailable" android:visibility="gone" />
</LinearLayout>
