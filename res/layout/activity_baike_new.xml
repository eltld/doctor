<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!--  <FrameLayout
        android:id="@+id/home_baike_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/reseda"
        android:orientation="vertical" >
    </FrameLayout> -->
    
      <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:flipInterval="30"
        android:background="@color/reseda"
        android:persistentDrawingCache="animation" />
    
     <View 
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/grayness"
           />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         
         <LinearLayout
             android:id="@+id/tab_baike_home"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:clickable="true"
             android:onClick="doClick"
             android:orientation="vertical">
             
             <ImageButton
                 android:id="@+id/pic_tab_home"
                 android:layout_width="22dp"
                 android:layout_height="22dp"
                 android:background="@drawable/baike_selector_home"
                 android:clickable="false"
                 />
             <TextView
                 android:id="@+id/tv_baike_home"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:text="百科首页"
                 android:textColor="@color/topbg_green"
                 />
             
         </LinearLayout>
         
         <LinearLayout
             android:id="@+id/tab_baike_relate_me"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:clickable="true"
             android:onClick="doClick"
             android:orientation="vertical">
             
             <ImageButton
                 android:id="@+id/pic_tab_relate_me"
                 android:layout_width="22dp"
                 android:layout_height="22dp"
                 android:background="@drawable/baike_selector_relate_me"
                 android:clickable="false"
                 />
             <TextView
                 android:id="@+id/tv_baike_relate_me"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:text="与我相关"
                 android:textColor="@color/grayness"
                 />
             
         </LinearLayout>
         
         <LinearLayout
             android:id="@+id/tab_baike_mine"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:clickable="true"
             android:onClick="doClick"
             android:orientation="vertical">
             
             <RelativeLayout 
                 android:layout_width="25dp"
                 android:layout_height="22dp">
             <ImageButton
                 android:id="@+id/pic_tab_mine"
                 android:layout_width="22dp"
                 android:layout_height="22dp"
                 android:background="@drawable/baike_selector_mine"
                 android:clickable="false"
                 />
             
             <ImageView 
                 android:layout_width="10dp"
                 android:layout_height="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:src="@drawable/red_point"
                 android:visibility="gone"
                 />
             
             </RelativeLayout>
             <TextView
                 android:id="@+id/tv_baike_mine"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:text="个人中心"
                 android:textColor="@color/grayness"
                 />
             
         </LinearLayout>
     </LinearLayout>
	
</LinearLayout>
