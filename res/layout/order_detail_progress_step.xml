<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/iv_step_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/step_one_pro" />

    <ImageView
        android:id="@+id/iv_step_one_wire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_one"
        android:src="@drawable/wire_pro" />

    <ImageView
        android:id="@+id/iv_step_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_one_wire"
        android:src="@drawable/step_one_nor" />

    <ImageView
        android:id="@+id/iv_step_two_wire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_two"
        android:src="@drawable/wire_pro" />

    <ImageView
        android:id="@+id/iv_step_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_two_wire"
        android:src="@drawable/step_one_nor" />

    <ImageView
        android:id="@+id/iv_step_three_wire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_three"
        android:src="@drawable/wire_pro" />

    <ImageView
        android:id="@+id/iv_step_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_step_three_wire"
        android:src="@drawable/step_one_nor" />

</RelativeLayout>